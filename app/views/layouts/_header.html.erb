<header>
  <nav>
    <%= link_to "Private Events", root_path, class: "app-logo"%>
    <ul class="left">
      <li>
        <%= link_to "Upcoming", events_path%>
      </li>
      <li>
        <%= link_to "Past", filtered_events_path(:past) %>
      </li>
      <li class="ml-3"><%= link_to "Add New Event", new_event_path%></li>
    </ul>
    
    <ul class="right">
      <% if user_signed_in? %>
        <li>
          <%= link_to current_user.email, user_path(current_user) %>
        </li>
        <li>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "button" %>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign In", user_session_path, class: "button" %>
        </li>
        <li>
          <%= link_to "Sign Up", new_user_registration_path, class: "button"%>
        </li>
      <% end %>
    </ul>
  </nav>
</header>